<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{eps}} <a href="/notes/edit/{{_id}}" class="fas fa-edit"></a>
                </h4>
                <hr>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="post">
                    <input type="hidden" name="_mehtos" value="DELETE">

                    <button class="btn btn-danger btn-block btn-sm" type="submit">Delete</button>

                </form>
            </div>
        </div>
        <br>
    </div>
    {{/each}}
</div>