{{#each errors}}
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      height="24px"
      viewBox="0 0 24 24"
      width="24px"
      fill="#000000"
    >
      <path d="M0 0h24v24H0z" fill="none"></path>
      <path d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z"></path>
    </svg>
    {{text}}
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/each}}
 
<div style="display: flexbox;" class="col-md-8 mx-auto">
  <div class="card">
    <div style="padding: 0 30% 0 35%;" class="card-header">
      <h3>Make Appointment</h3>
    </div>
    <div class="card-body">
      <form action="/user/new-appointment" method="POST">
        <div class="form-groub">
          <!--  *************************************************************************************************** -->
          <strong> Cédula: </strong>
          <input type="number" name="cc" class="form-control" placeholder="Cédula" autofocus />
        </div>
        <br />
          <!--  *************************************************************************************************** -->
        <div class="form-group">
            <strong> Type appointment : </strong>
            <select name="typeAppointment">
                <option name="typeAppointment" value="" defaultChecked>Select opction.</option>
                <option name="typeAppointment" value="general"> General </option>
                <option name="typeAppointment" value="laboratory"> Laboratory </option>
                <option name="typeAppointment" value="odontology"> Odontology </option>
            </select>
        </div>
        <br />
         <!--  *************************************************************************************************** -->
        <div class="form-grup">
          <textarea name="description" class="form-control" placeholder="Desctiption"></textarea>
        </div>
        <br />
         <!--  *************************************************************************************************** -->
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Submit
          </button>
        </div>
      </form>
    </div>

  </div>

</div>